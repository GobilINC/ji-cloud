  "name": "app",
  "version": "0.1.0",
  "scripts": {
    "build": "npm run clean && npm run _copy-static-prod && rollup --config rollup.prod.js",
    "start": "npm run _copy-static-dev && run-p _mediaserver _watch",
    "clean": "rimraf ./dist",
    "_watch": "rollup --config rollup.dev.js --watch",
    "_mediaserver": "node ./build-utils/local-media-server.js",
    "_copy-static-dev": "node ./build-utils/copy-static-directory.js --dev",
    "_copy-static-prod": "node ./build-utils/copy-static-directory.js --prod"
  },
  "dependencies": {
    "@wasm-tool/rollup-plugin-rust": "^1.0.2",
    "fs-extra": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.7.6"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-serve": "^1.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "serve-index": "^1.9.1"
  }
}
